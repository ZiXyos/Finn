<label class="input">
  <svg class="h-[1em] opacity-50" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
      <g
        stroke-linejoin="round"
        stroke-linecap="round"
        stroke-width="2.5"
        fill="none"
        stroke="currentColor"
      >
        <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
        <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
      </g>
    </svg>
    <input
      type="text"
      required
      placeholder="Request URL"
      />
</label>

<button
  class="btn btn-sm btn-primary"
  id="submit-button"
  type="submit"
>
  Submit
</button>

<script>
  import { invoke } from '@tauri-apps/api/core';
  document.querySelector('#submit-button')?.addEventListener('click', async () => {
    const inputElement = document.querySelector('input[name="request"]');
    const requestValue = inputElement instanceof HTMLInputElement ? inputElement.value : '';

    const resp = await invoke('send_request', {
      request_param: {
        method: 'GET',
        url: requestValue,
        body: "Hello World  FROM ASTRO"
      }
    });

    console.log(resp)
  })

</script>
